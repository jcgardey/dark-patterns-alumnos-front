{
  "manifest_version": 2,
  "name": "DP_extension",
  "version": "1.1",

  "description": "Detector de ciertos DP",

  "permissions":["activeTab"],
  "browser_action":{
    "default_popup": "menu/pop-up.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "globals.js",
        "XPathInterpreter.js",
        "page_segmentation/common.js",
        "page_segmentation/block_segment.js",
        "hiddenCosts.js",
        "urgency.js",
        "confirmshaming.js",
        "misdirection-script.js",
        "extension.js"
      ]
    }
  ],
  "background":{
    "scripts": [
      "background.js"
    ]
  }
  
}

