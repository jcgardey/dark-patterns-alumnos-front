{
  "manifest_version": 2,
  "name": "DP_extension",
  "version": "1.0",

  "description": "Detector de ciertos DP",

  "permissions":["activeTab"],
  "browser_action":{
    "default_popup": "menu/pantalla.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "page_segmentation/common.js",
        "page_segmentation/block_segment.js",
        "hiddenCosts.js",
        "api_connection.js"
      ]
    }
  ],
  "background":{
    "scripts": [
      "background.js"
    ]
  }
}

